<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>



    <style name="CardListMovieStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/deep_orange_200</item>
    </style>

    <style name="MovieTitle" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginBottom">@dimen/spacing_xsmall</item>
        <item name="android:textColor">@color/deep_orange_500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
